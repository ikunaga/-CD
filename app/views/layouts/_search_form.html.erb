<div class="container">
  <div class="row" >
    <div class="search-result-title">
      <h3 style="margin-left: 20px;">検索結果一覧</h3>
    </div>

    <div class="items" style="text-align: center; margin-left: 20px;">
      <% @result.each do |item| %>
        <ul class="list-group col-lg-3" style="width: 230px;">
          <div class="list-group-item"><%= attachment_image_tag item, :image, :fill, 180, 180, fallback: "no_img.png", size: '180x180' %></div>
          <li class="list-group-item"><%= item.disk_name %></li>
          <li class="list-group-item"><%= item.artist.artist_name %></li>
          <li class="list-group-item"><%= item.label.label_name %></li>
          <li class="list-group-item">
            <% if admin_signed_in? %>
              <%= link_to "詳細", admin_item_path(item.id) %>
            <% else %>
              <%= link_to "詳細", item_path(item.id) %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>

  </div>
</div>