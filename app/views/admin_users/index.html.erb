<div class="container">
	<div class="row">
		<h2 style="text-align: center">ユーザー一覧</h2>
		<table class="table col-md-12 col-xs-12" style="margin-top: 50px">
	        <thead>
		        <tr>
			      <th>#</th>
			      <th>姓</th>
			      <th>名前</th>
			      <th>Eメール</th>
			      <th>有効チェック</th>
		        </tr>
	        </thead>
	        <tbody>
	            <% @customer.each do |customer| %>
	            	<tr>
			          <th><%= customer.id %></th>
			          <td><%= link_to customer.last_name, admin_user_path(customer.id) %></td>
			          <td><%= customer.first_name %></td>
			          <td><%= customer.email %></td>
			          <% if customer.deleted_at.nil? %>
				      	<td>会員</td>
				      <% else %>
				      	<td>退会済</td>
				      <% end %>
		            </tr>
				<% end %>
	        </tbody>
        </table>
    </div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-xs-4"></div>
		<div class="col-md-4 col-xs-4">
            <%= paginate @customer, class: "pagenation" %>
        </div>
        <div class="col-md-4 col-xs-4"></div>
    </div>
</div>