<h2 style="text-align: center">登録商品一覧</h2>
<div class="dui-container searchresults">
	<div class="row">
		<div class="col-md-2 col-xs-2"></div>
       <div class="dui-cards searchresultitems col-md-8 col-xs-8">
    	   <% @items.each do |item| %>
                <div class="items clearfix" style="float: left; margin-left: 80px;">
            	    <%= link_to admin_item_path(item.id) do %>
                       <%= attachment_image_tag item, :image, :fill, 150, 150, fallback: "no_img.png", size:'150x150' %>
                    <% end %>
                    <h3><%= item.artist.artist_name %></h3>
                    <h3><%= item.disk_name %></h3>
                    <h3><%= item.item_status %>/<%= item.stock%></h3>
                </div>
            <% end %>
        </div>
        <div class="col-md-2 col-xs-2"></div>
    </div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-xs-4"></div>
		<div class="col-md-4 col-xs-4">
            <%= paginate @items, class: "pagenation" %>
        </div>
        <div class="col-md-4 col-xs-4"></div>
    </div>
</div>
