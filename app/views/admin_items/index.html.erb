<h2 style="text-align: center">登録商品一覧</h2>
<div class="container">
	<div class="row">
		<div class="col-md-2 col-xs-2"></div>
        <div class="list-group card col-md-8 col-xs-8" style="width: 18rem; float: left; margin-left: 65px;">
    	    <% @items.each do |item| %>
                <div class="card-img-top">
            	    <%= link_to admin_item_path(item.id) do %>
                        <%= attachment_image_tag item, :image, :fill, 150, 150, fallback: "no_img.png", size:'150x150' %>
                    <% end %>
                </div>
                <ul class="list-group list-group-flush">
                    <p class="card-link list-group-item"><%= item.artist.artist_name %></p>
                    <p class="card-link list-group-item"><%= item.disk_name %></p>
                    <p class="card-link list-group-item"><%= item.item_status %>/<%= item.stock%></p>
                </ul>
            <% end %>
        </div>
    </div>
    <div class="col-md-2 col-xs-2"></div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-xs-4"></div>
		<div class="col-md-4 col-xs-4">
            <%= paginate @items, class: "pagenation" %>
        </div>
        <div class="col-md-4 col-xs-4"></div>
    </div>
</div>