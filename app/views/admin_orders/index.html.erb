<div class="container">
	<div class="row">
		<h4>注文履歴一覧</h4>

			<% if @order.present? %>
				<table class="table">

				  <thead>
				    <tr>
				      <th scope="col">#</th>
				      <th scope="col">購入者</th>
				      <th scope="col">合計金額</th>
				      <th scope="col">購入日付</th>
				      <th scope="col">発送状況</th>
				      <th scope="col">注文詳細</th>
				    </tr>
				  </thead>

				  <tbody>
				  	<% @order.each do |od| %>
					    <tr>
					      <th scope="row"><%= od.order_id %></th>
					      <td><%= od.order_detail.user.last_name %><%= od.order_detail.user.first_name %></td>
					      <td><%= od.total_price %></td>
					      <td><%= od.created_at %></td>
					      <td><%= od.order_status %></td>
					      <td><%= link_to "詳細", admin_order_path(@order) %></td>
					    </tr>
					<% end %>
				  </tbody>

				</table>

				<%= paginate @items, class: "paginate" %>
			<% end %>


	</div>
</div>