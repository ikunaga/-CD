<div class="container">
	<div class="row">
		<h4>注文履歴一覧</h4>

			<% if @orders.present? %>
				<table class="table">

				  <thead>
				    <tr>
				      <th scope="col">#</th>
				      <th scope="col">購入者</th>
				      <th scope="col">合計金額</th>
				      <th scope="col">購入日付</th>
				      <th scope="col">発送状況</th>
				      <th scope="col">注文詳細</th>
				    </tr>
				  </thead>

				  <tbody>

					    <tr>
					      <th scope="row"><%= @orders.id %></th>
					      <td><%= @orders.user.last_name %><%= @orders.user.first_name %></td>
					      <td><%= @orders.total_price %></td>
					      <td><%= @orders.created_at %></td>
					      <td><%= @orders.order_status %></td>
					      <td><%= link_to "詳細", admin_order_path(@orders) %></td>
					    </tr>

				  </tbody>

				</table>

			<% end %>


	</div>
</div>