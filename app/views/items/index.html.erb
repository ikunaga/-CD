<body>
	<div class="container">
		<div class="row">
			<div class="recommend">
				<h4 class="p-3 mb-2 bg-primary text-white" style="width: 145px; padding: 20px; text-align: center;">Recommend</h4>
			</div>
			<% @items.each do |item| %>
				<div class="col-xs-6 col-md-3">
					<div class="thumbnail">
						<%= item.disk_name %>
					</div>
				</div>
				<div class="col-xs-6 col-md-3">
					<div class="thumbnail">
						<%= item.stock %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</body>
