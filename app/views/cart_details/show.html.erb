
<div class="container">
	<div class="row">
		<div class="cart_index col-md-8 col-xs-12">
			<h2 class="p-3 mb-2" style="width: 300px; padding: 20px; text-align: center;" >カート一覧</h2>
			    <%= @cart.each do |cart| %>
			        <div class="row cart_item" style="margin-bottom: 20px" >
				        <div class="item_img col-md-4">
					      <img src="/assets/no_img.png">
				        </div>
				        <div class="item_info col-md-8">
				        	 <%= cart.item.disk_name %>
				        	 <%= cart.item.price %>
					        <a class="btn btn-default" href="#" role="button">削除</a>
				        </div>
			        </div>
			    <% end %>
        </div>
        <div class="price_box col-md-4 col-xs-12">
          <h2 class="p-3 mb-2" style="width: 300px; padding: 20px; text-align: center; float-left;">小計<%= @totalquantity to_i %>点</h2>
          <div class="item_add_price">
          	  <p style="text-align: center;" ><%= @totalpraice to_i %></p>
          </div>
        </div>
    </div>
</div>

