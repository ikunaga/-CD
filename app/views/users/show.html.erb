<div class="container">
	<div class="row">
		<div class="user-info col-xs-4">
    		<h2>ユーザー</h2>
    		<div class="user-name col-sm-3">
    			<%= @user.last_name %>
    		</div>
    		<div class="user-address col-sm-3">
    			<%= @user.address %>
    		</div>
    		<div class="user-shipping-address col-sm-3">
    			<%= @user.shipping_addresses.zip_code %>
    			<%= @user.shipping_addresses.address %>
    		</div>
    		<div class="edit-page col-sm-3">
    			<%= link_to "編集", edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    		</div>
    	</div>
	</div>
</div>